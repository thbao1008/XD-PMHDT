{
  "name": "aesp-microservices",
  "version": "1.0.0",
  "description": "AESP Microservices - Start all services",
  "type": "module",
  "scripts": {
    "start:all": "node start-all-services.js",
    "check:health": "node check-health.js",
    "test:services": "node test-services.js",
    "verify:setup": "node verify-setup.js",
    "install:all": "npm run install:gateway && npm run install:notification && npm run install:community && npm run install:package && npm run install:purchase && npm run install:user && npm run install:mentor && npm run install:learner && npm run install:admin && npm run install:ai && npm run install:file",
    "install:gateway": "cd api-gateway && npm install",
    "install:notification": "cd notification-service && npm install",
    "install:community": "cd community-service && npm install",
    "install:package": "cd package-service && npm install",
    "install:purchase": "cd purchase-service && npm install",
    "install:user": "cd user-service && npm install",
    "install:mentor": "cd mentor-service && npm install",
    "install:learner": "cd learner-service && npm install",
    "install:admin": "cd admin-service && npm install",
    "install:ai": "cd ai-service && npm install",
    "install:file": "cd file-service && npm install"
  },
  "devDependencies": {
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

