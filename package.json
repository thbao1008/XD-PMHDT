{
  "name": "aesp-root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "aiesp:learn": "node backend/ai_models/startAiESPLearning.js",
    "aiesp:monitor": "node -e \"import('child_process').then(({spawn})=>{const p=spawn('python',['backend/ai_models/aiespContinuousLearning.py','monitor'],{stdio:'inherit',shell:true,env:{...process.env,PYTHONIOENCODING:'utf-8'}});p.on('exit',c=>process.exit(c||0));})\"",
    "aiesp:check": "node -e \"import('child_process').then(({spawn})=>{const p=spawn('python',['backend/ai_models/aiespContinuousLearning.py','check'],{stdio:'inherit',shell:true,env:{...process.env,PYTHONIOENCODING:'utf-8'}});p.on('exit',c=>process.exit(c||0));})\"",
    "aiesp:train": "python backend/ai_models/aiespContinuousLearning.py train",
    "aiesp:train:all": "python backend/ai_models/aiespContinuousLearning.py train-all",
    "aiesp:generate": "node backend/ai_models/startAiESPSampleGeneration.js",
    "aiesp:generate:conversation": "node backend/ai_models/startAiESPSampleGeneration.js conversation_ai 50",
    "aiesp:train:goals": "node backend/ai_models/startLearnerGoalsTraining.js",
    "aiesp:gpu:train": "node backend/ai_models/startLocalGPUTraining.js train-all",
    "aiesp:gpu:train:web": "node backend/ai_models/startLocalGPUTraining.js train-all --web-learning",
    "aiesp:gpu:check": "python backend/ai_models/localGPUTraining.py check-gpu",
    "aiesp:gpu:auto": "node backend/ai_models/startAutoLocalGPUTraining.js",
    "aiesp:cleanup": "python backend/ai_models/localGPUTraining.py cleanup",
    "dev:all": "concurrently -n BE,FE -c green,blue \"npm run dev:be:micro\" \"npm run dev:fe\"",
    "dev:be:micro": "cd backend/services && node start-all-services.js",
    "dev:fe": "node frontend/start-frontend.js",
    "dev": "npm run dev:all",
    "dev:micro": "concurrently -n BE,FE -c green,blue \"npm run dev:be:micro\" \"npm run dev:fe\"",
    "init:db": "node backend/db/init-db.js",
    "dump:db": "node backend/db/dump-database.js",
    "restore:dump": "node backend/db/restore-dump-direct.js",
    "seed:admin": "node backend/seed/seedAdminsFromFile.js",
    "restore:users": "node backend/scripts/restore-users-from-dump.js",
    "check:db": "node backend/scripts/check-db-health.js",
    "test:api": "node backend/scripts/test-api-endpoints.js",
    "test:login": "node backend/scripts/test-login.js",
    "generate:learners": "node backend/scripts/generateLearners.js",
    "check:assistant": "node backend/scripts/checkAssistantAI.js",
    "check:current-ai": "node backend/scripts/checkCurrentAI.js",
    "check:whisperx": "node backend/scripts/checkWhisperX.js",
    "csm:check": "python backend/ai_models/csm_service.py check",
    "csm:setup": "cd backend/ai_models && python -m venv csm/.venv && csm/.venv/Scripts/pip install -r csm/requirements.txt",
    "fix:pytorch": "node backend/scripts/fixPyTorchCUDA.js",
    "fix:all": "node fix-all.js",
    "install:all": "npm install",
    "build": "npm run build:fe",
    "build:fe": "cd frontend && npm run build",
    "start": "cd backend/services && node start-all-services.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-port-killer": "^1.4.0",
    "nodemon": "^3.1.10",
    "vite": "^5.4.21"
  }
}
